{
  "env": "development",
  "issuer": {
    "name": "Vancouver Island Health Authority"
  },
  "inviteRequired": false,
  "authentication": {
    "enabled": true,
    "oidcSettings": {
      "authority": "https://a2a-vc-authn-controller-dev.pathfinder.gov.bc.ca",
      "clientId": "inoculation-dev",
      "redirectUri": "https://inoculation-issuer-dev.pathfinder.gov.bc.ca/oidc-callback",
      "redirect_uri": "https://inoculation-issuer-dev.pathfinder.gov.bc.ca/oidc-callback-error",
